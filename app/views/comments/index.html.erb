<%= render 'layouts/styling' %>

<h2>Comment Feed for Tasks. </h2>

<ul>
    <% @comments.each do |comment| %>
<br>

  <strong><li><%= comment.user.full_name %></strong>  commented "<%= link_to comment.message, comment_path(comment) %>" for this Task: <%= link_to comment.task.task_name, task_path(comment.task_id) if comment.task %></li>
   
<br>
<% if current_user == comment.user %> 
    <%= button_to "Edit Comment", edit_comment_path(comment), method: :get  %> 
    <%= button_to "Delete Comment", comment_path(comment), data: {confirm: "Are you sure you want to delete this task?"}, method: :delete  %>
<br> 
  <% end %>
<% end %>
</ul>

