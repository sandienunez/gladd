<h1>Comment Feed</h1>

<ul>
    <% @comments.each do |comment|%>
<br>

  <li><%= current_user.full_name %>  commented "<%= link_to comment.message, comment_path(comment) %>" for this Task: <%= link_to comment.task.task_name, task_path(comment.task_id) if comment.task %></li>
<br>
    <%= button_to "Edit Comment", edit_comment_path(comment), method: :get %> 
    <%= button_to "Delete Comment", comment_path(comment), method: :delete %>
<br> 
<% end %>
</ul>

