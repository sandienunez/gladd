<%= render 'layouts/styling' %>

<h2>All my Daily Journals. </h2>


<ul>
    <% @journals.each do |journal|%>
<br>
  <li><%= journal.user.full_name %>  made: <%= link_to journal.date, journal_path(journal) %>
<br>
<% if current_user == journal.user %> 
    <%= button_to "Edit", edit_journal_path(journal), method: :get  %> 
    <%= button_to "Delete", journal_path(journal), data: {confirm: "Are you sure you want to delete this journal"}, method: :delete  %>
<br> 
  <% end %>
<% end %>
</ul>

