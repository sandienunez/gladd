<%= render partial: "layouts/errors", locals: {object: @task} %>

<head>
<style>
body {background-color: khaki;}

h2 {
  color: #619ce0;
  font-family: arial;
  font-size: 300%;

}
</style>
</head>
<body>

<h1> Edit Task. </h1>
<ul>

<%= form_for(@task) do |f| %>

  <%= f.label :task_name %>
    <%= f.text_area :task_name %>

    <br>
  <br>

     <%= f.label :action_one %>
    <%= f.text_area :action_one %>

 <br>
  <br>
     <%= f.label :action_two %>
    <%= f.text_field :action_two %>

 <br>
  <br>
     <%= f.label :action_three %>
    <%= f.text_area :action_three %>

<%= f.label :date %>
<%= f.date_select :date, {
            order: [:month, :day, :year],
            date_separator: "/",
            prompt: {
                month: 'mm',
                day: 'dd',
                year: 'yyyy',
            },
         } %>
 <br>
  <br>

    <%= f.label :priority_ranking %>
   <%= f.select :priority_ranking, options_for_select(1..6), { prompt: "Please Choose a ranking, 1 = not urgent and 6 = ULTRA important!" } %>
    <br>
     <br>

<%= f.submit "Save Changes" %>
    <% end %>
</ul>
