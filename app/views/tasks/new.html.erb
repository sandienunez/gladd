
<%= render 'layouts/nav' %>
<ul>
<h1> Plan your tasks and Daily Routine here! </h1>
<h3>Instructions: Next to each row, fill out each part in the space provided. For the "Task name" row, please write 1 task that needs to be completed that day. </h3>

<%= render partial: "layouts/errors", locals: {object: @task} %>
<!-- render the errors partial, sent it to the @task as the object  -->
<!-- render partial + use local variables-->

<%= form_for(@task) do |f| %>


<%= f.label :date %>
<%= f.date_select :date, {
            order: [:month, :day, :year],
            date_separator: "/",
            prompt: {
                month: 'mm',
                day: 'dd',
                year: 'yyyy',
            },
         } %>
 <br>
  <br>

    <%= f.label :priority_ranking %>
   <%= f.select :priority_ranking, options_for_select(1..5), { prompt: "Please Choose between 1-5, where 1 = not urgent and 5 = super important!" } %>

 <br>
  <br>
    <%= f.label :task_name %>
    <%= f.text_area :task_name %>

    <br>
     <br>

     <%= f.label :prayer %>
    <%= f.text_area :prayer%>

 <br>
  <br>
     <%= f.label :exercise %>
    <%= f.text_field :exercise %>

 <br>
  <br>

     <%= f.label :supplements %>
    <%= f.text_field :supplements %>

 <br>
  <br>

     <%= f.label :daily_plan %>
    <%= f.text_area :daily_plan %>

 <br>
  <br>

     <%= f.label :stretch %>
    <%= f.text_field :stretch %>


 <br>
  <br>

     <%= f.label :diet %>
    <%= f.text_area :diet %>

 <br>
  <br>


    <%= f.hidden_field :user_id, :value => current_user.id %>

    <%= f.submit %>

    <% end %>

    </ul>
